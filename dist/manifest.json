{
	"manifest_version": 2,
	"version": "3.3.1",
	"name": "有道词典划词扩展2019",
	"short_name": "有道划词",
	"description": "可自动发音，添加单词本，记录、导出查询历史！",
	"icons": {
		"128": "image/icon-128.png",
		"64": "image/icon-128.png",
		"48": "image/icon-128.png"
	},

	"background": {
		"scripts": ["js/background.js"]
	},
	"content_scripts": [{
		"js": ["js/lookup.js"],
		"all_frames": true,
		"matches": ["<all_urls>"]
	}],
	"options_page": "option.html",
	"browser_action": {
		"default_icon": "image/icon-128.png",
		"default_popup": "popup.html"
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+Shift+F",
				"mac": "Command+Shift+Y"
			}
		}
	},
	"permissions": ["<all_urls>", "storage", "alarms", "notifications"],
	"content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
	"web_accessible_resources": ["image/icon-128.png", "image/voice-btn.png", "style/content.css"],
	"author": "g8up"
}