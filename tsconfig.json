{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "jsx": "react",
    "jsxFactory": "h",
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    // "typeRoots": [ "src/typings", "node_modules/@types" ],
    // "types": [
    //   "chrome"
    // ],
    "lib": ["dom", "es5", "es2015", "es2016"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "Model/*": ["src/model/*"],
    }
  },
  "include": ["src/*.ts", "src/*.tsx"],
  "exclude": ["node_modules", "built/**"]
}